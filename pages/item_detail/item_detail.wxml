<!--pages/item_detail/item_detail.wxml-->
<view>{{post_info.post_id}}</view>
<view class='item' wx:for="{{detail}}" wx:key="item">
    <view class='item_top'>
        <image class='user_face' src='/image/face.jpg'></image>
        <text class='item_content_cate'>{{item.class}}</text>
        <text class='user_name'>{{item.service_id}}</text>
        <text class='publish_time'>{{item.publish_time}}</text>
    </view>
    <view class='item_content_text'>
        {{item.article}}
    </view>
    <view class='item_content_bottom'>
        <view class='browse_message'>
            <image class='collect_png' src='/image/collect.png'></image>
            <image class='browse_png' src='/image/browse.png'></image>
            <text class='browse_text'>{{item.view}}</text>
            <image class='message_png' src='/image/comment.png'></image>
            <text class='message_text'>{{item.favors}}</text>
        </view>

    </view>
</view>

<view bindtap="RequestData">回复</view>

<scroll-view scroll-y="true" style="height: 200px" wx:for="{{list}}" wx:if="{{index>0}}" wx:key="item">
    {{item.name}}
    <view bindtap="remove" class="delete"> 删除 </view>
    <view class="talk" bindtap="bindReply">回复</view>

    <view class="release" hidden="{{!releaseFocus}}">
        <textarea class="text" placeholder-class="input_null" fixed="true" maxlength="-1" show-confirm-bar="false" cursor-spacing="15" auto-height="true" focus="{{releaseFocus}}" placeholder="回复 {{releaseName}}"></textarea>
        <view class="submit">发送</view>
    </view>
</scroll-view>
<form bindsubmit="add_after">
    <view style="opacity:{{1}}" class='item_bottom'>
        <textarea style="opacity:{{1}}" auto-hight name="input" class='item_bottom_textarea' bindblur="bindTextAreaBlur" placeholder="在这里输入您的评论" value="{{ceshi}}" />
        <button class='item_bottom_send' formType="submit">提交</button>
    </view>
</form>