/*添加图片  */

.push_img {
    font-size: 46rpx;
    color: #666;
    width: 200rpx;
    height: 200rpx;
    border: 1px dashed #70bcf6;
    border-radius: 16rpx;
    background-color: #fff;
    text-align: center;
    line-height: 200rpx;
    margin-left: 20rpx;
    float: left;
}
/*添加上的图片  */
.pic {
    float: left;
    width: 200rpx;
    height: 200rpx;
    border: 1px solid #ccc;
    border-radius: 16rpx;
    margin-left: 20rpx;
}
.clear{
    clear: both;
}

.form_content {
    padding: 30rpx;
    margin: 0 auto;
    font-size: 36rpx;
    border-top: 1px solid #ddd;
    border-bottom: 1px solid #ddd;
    padding-bottom: 80rpx;
}

.sub_btn {
    position: absolute;
    right: 25rpx;
    width: 120rpx;
    line-height: 60rpx;
    height: 60rpx;
    padding: 0;
    color: white;
    background-color: #43cd80;
    border: 1rpx solid #43cd80;
    border-radius: 50rpx;
    font-size: 30rpx;
}

.sel_cate {
    display: block;
    font-size: 32rpx;
    color: #ccc;
    margin-left: 25rpx;
    margin-top: 30rpx;
}

.radio_text {
    font-size: 33rpx;
    color: #666;
    margin-left: 30rpx;
    margin-top: 15rpx;
    padding: 4rpx 20rpx 4rpx 20rpx;
    display: inline-block;
    border: 1px solid #ccc;
    border-radius: 32rpx;
}

.mig {
    width: 100%;
    /* display:flex; */
    flex-direction: row;
    /* border: 1px solid red; */
    word-wrap: break-word;
}
